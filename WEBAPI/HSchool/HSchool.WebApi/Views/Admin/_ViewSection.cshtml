@model List<HSchool.Business.Models.Section>
<h1 class="page-head-line">Sections </h1>
<div class="">
    @if (Model.Count > 0)
    {
        <table class="table table-striped table-hover">
            <thead class="thead-default">
                <tr>
                    <th>#</th>
                    <th>Section Name</th>
                </tr>
            </thead>
            @{int counter = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(counter++)</td>
                    <td><a href="#" onclick="adminView.sections.edit(@(item.SectionId))">@(item.SectionName)</a></td>
                </tr>
            }
        </table>
    }
</div>
<div class="row">
    <div class="col-md-12">
        <a href="#" onclick="adminView.sections.edit(0)">Add Section</a>
    </div>
</div>

