@model List<HSchool.Business.Models.ApplicationRole>
<h1 class="page-head-line">Application Roles </h1>

<div class="">
    @if (Model.Count > 0)
    {
        <table class="table table-striped table-hover">
            <thead class="thead-default">
                <tr>
                    <th>#</th>
                    <th>Role Name</th>
                    <th>Is Active</th>
                    <th>Visible To Login</th>
                    <th>Created Date</th>
                    <th>Modified Date</th>
                </tr>
            </thead>
            @{int counter = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(counter++)</td>
                    <td><a href="#" onclick="adminView.roles.edit(@(item.RoleId))">@(item.RoleName)</a></td>
                    <td>@(item.IsActive)</td>
                    <td>@(item.VisibleToLogin)</td>
                    <td>@(item.CreatedDate)</td>
                    <td>@(item.ModifiedDate)</td>
                </tr>

            }
        </table>
    }
</div>

<div class="btn-wrapper clearfix">
    <div class="pull-left">
        <a href="#" class="btn-blue" onclick="adminView.roles.edit(0)">Add New Role</a>
    </div>
</div>

