@model List<HSchool.Business.Models.AcademicYear>
<h2>Academic Years </h2>
<div class="form-container">
    @if (Model.Count > 0)
    {
        <table class="table table-striped table-hover">
            <thead class="thead-default">
                <tr>
                    <th>#</th>
                    <th>Year </th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Active</th>
                </tr>
            </thead>
            @{int counter = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(counter++)</td>
                    <td><a href="#" onclick="adminView.classes.edit(@(item.AcademicYearId))">@(item.AcademicYearDisplay)</a></td>
                    <td>@(item.StartDate)</td>
                    <td>@(item.EndDate)</td>
                    <td>@(item.IsActive)</td>
                </tr>
            }
        </table>
    }
</div>

<div class="btn-wrapper clearfix">
    <div class="pull-left">
        <a href="#" class="btn-blue" onclick="adminView.academicYear.edit(0)">Add Year</a>
    </div>
</div>
