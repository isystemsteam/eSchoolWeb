@model List<HSchool.Business.Models.ClassSection>
<h1 class="page-head-line">Class Sections </h1>
<div class="row">
    <div class="row">
        @if (Model.Count > 0)
        {
            <table class="table table-striped table-hover">
                <thead class="thead-default">
                    <tr>
                        <th>#</th>
                        <th>Class Name</th>
                    </tr>
                </thead>
                @{int counter = 1;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(counter++)</td>
                        <td><a href="#" onclick="adminView.sections.edit(@(item.ClassSectionId))">@(item.ClassName)</a></td>
                    </tr>
                    foreach (var section in item.SectionCollection)
                    {
                        <tr>
                            <th>@(section.SectionName)</th>                            
                        </tr>
                    }
                }
            </table>
        }
    </div>
</div>
