@model List<HSchool.Business.Models.Classes>
<h2>Classes </h2>
<div class="form-container">
    @if (Model.Count > 0)
    {
        <table class="table table-striped table-hover">
            <thead class="thead-default">
                <tr>
                    <th>#</th>
                    <th>Class Name</th>
                    <th>Name In Digit</th>
                    <th>Visible To Application</th>
                </tr>
            </thead>
            @{int counter = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(counter++)</td>
                    <td><a href="#" onclick="adminView.classes.edit(@(item.ClassId))">@(item.ClassName)</a></td>
                    <td>@(item.NameInDigit)</td>
                    <td>@(item.IsVisibleToApplication)</td>
                </tr>
            }
        </table>
    }
</div>

<div class="btn-wrapper clearfix">
    <div class="pull-left">
        <a href="#" class="btn-blue" onclick="adminView.classes.edit(0)">Add Class</a>

    </div>
</div>
