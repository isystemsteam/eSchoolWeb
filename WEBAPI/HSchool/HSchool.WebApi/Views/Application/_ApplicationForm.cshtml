@model HSchool.Business.Models.AdmissionForm
<div class="row">
    <div class="col-md-12">
        <h1 class="page-head-line">Student Entry Form </h1>
    </div>
</div>
<div class="">
    <a class="form-group-collapse-link clearfix"> <span class="pull-left"><i class="fa fa-chevron-right"></i> Student Information</span><i class="pull-right fa fa-plus"></i> </a>
</div>
<div class="form-group-expand-div">
    <div class="row">
        <div class="col-lg-6">
            @Html.LabelFor(m => m.StudentClassInfo.ClassId)
            @Html.HiddenFor(m => m.StudentClassInfo.ClassId, new { @id = "", @class = "hiddenListBox" })
            @Html.ListTextBoxFor(m => m.StudentClassInfo.ClassName, Model.ListClasses, null)
        </div>
        <div class="col-lg-6">
            @Html.LabelFor(m => m.StudentClassInfo.AcademicYear)
            @Html.TextBoxFor(m => m.StudentClassInfo.AcademicYear, new { @Id = "txtAcademicYear" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            @Html.LabelFor(m => m.StudentInfo.FirstName)
            @Html.TextBoxFor(m => m.StudentInfo.FirstName, new { @Id = "txtFirstName" })
        </div>
        <div class="col-lg-6">
            @Html.LabelFor(m => m.StudentInfo.LastName)
            @Html.TextBoxFor(m => m.StudentInfo.LastName, new { @Id = "txtLastName" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            @Html.LabelFor(m => m.StudentInfo.DateOfBirth)
            @Html.TextBoxFor(m => m.StudentInfo.DateOfBirth, new { @Id = "txtDateOfBirth", @class = "dateTimePicker" })
        </div>
        <div class="col-lg-6">
            @Html.LabelFor(m => m.StudentInfo.PlaceOfBirth)
            @Html.TextBoxFor(m => m.StudentInfo.PlaceOfBirth, new { @Id = "txtPlaceOfBirth" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            @Html.LabelFor(m => m.StudentInfo.Nationality)
            @Html.TextBoxFor(m => m.StudentInfo.Nationality, new { @Id = "txtNationality", @class = "" })
        </div>
        <div class="col-lg-6">
            @Html.LabelFor(m => m.StudentInfo.Religion)
            @Html.TextBoxFor(m => m.StudentInfo.Religion, new { @Id = "txtReligion" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            @Html.LabelFor(m => m.StudentInfo.Community)
            @Html.TextBoxFor(m => m.StudentInfo.Community, new { @Id = "txtCommunity", @class = "" })
        </div>
        <div class="col-lg-6">
            @Html.LabelFor(m => m.StudentInfo.Religion)
            @Html.TextBoxFor(m => m.StudentInfo.Religion, new { @Id = "txtReligion" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            @Html.LabelFor(m => m.StudentInfo.MotherLanguage)
            @Html.TextBoxFor(m => m.StudentInfo.MotherLanguage, new { @Id = "txtMotherLanguage", @class = "" })
        </div>
        <div class="col-lg-6">
            @Html.LabelFor(m => m.StudentInfo.FluencyinOthers)
            @Html.TextBoxFor(m => m.StudentInfo.FluencyinOthers, new { @Id = "txtFluencyinOthers" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @Html.LabelFor(m => m.StudentInfo.IsTransportRequired)

        </div>
    </div>
</div>
