@model HSchool.Business.Models.ClassSectionForm
<h2>Classes & Sections</h2>
<div class="form-group-expand-div admin-form">
    <div class="form-container">
        <div class="row custom-row clearfix">
            <div class="col-lg-12 custom-text">
                @Html.DropDownList("ddlClasses", Model.ListClasses, new { @id = "", @class = "selectpicker show-tick required", @onchange = "adminView.classSections.selectClass(this)" })
                <i class="fa validationResult"></i>
            </div>
        </div>
    </div>
</div>
<script id="tempClassSections" type="text/x-jsrender">
    <table class="table table-striped table-hover">
        <thead class="thead-default">
            <tr>
                <th>Sections</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            {{for Instance.SectionCollection}}
            <tr class="clsClassSectionCollection">
                <td>{{:SectionName}}</td>
                {{if IsSelected}}
                <td class="clsEmpty">
                    <div class="custom-check custom-check-margin">
                        <input type="checkbox" checked="checked" name="IsVisibleToApplication" id="IsVisibleToApplication" sectionid="{{:SectionId}}" />
                        <label for="IsVisibleToApplication"><span><span><i class="fa fa-check"></i></span></span></label>
                    </div>
                </td>
                {{else}}
                <td class="clsEmpty">
                    <div class="custom-check custom-check-margin">
                        <input type="checkbox" name="IsVisibleToApplication" id="IsVisibleToApplication" sectionid="{{:SectionId}}" />
                        <label for="IsVisibleToApplication"><span><span><i class="fa fa-check"></i></span></span></label>
                    </div>
                </td>
                {{/if}}
            </tr>
            {{/for}}
        </tbody>
    </table>
    <div class=" btn-wrapper clearfix" id="divSubmitContainer">
        <div class="pull-right">
            <input type="button" value="Cancel" class="btn-grey">
        </div>
        <div class="pull-right">
            <input type="button" value="Save" id="btnUpdateClassSection" class="btn-blue" />
        </div>
    </div>
</script>
