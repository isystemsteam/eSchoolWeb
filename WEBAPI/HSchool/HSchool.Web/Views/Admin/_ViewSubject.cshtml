@model List<HSchool.Business.Models.Subject>
<h2>Classes </h2>
<div class="form-container">
    @if (Model.Count > 0)
    {
        <table class="table table-striped table-hover">
            <thead class="thead-default">
                <tr>
                    <th>#</th>
                    <th>Subject</th>                    
                </tr>
            </thead>
            @{int counter = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(counter++)</td>
                    <td><a href="#" onclick="adminView.classes.edit(@(item.SubjectId))">@(item.SubjectName)</a></td>                    
                </tr>
            }
        </table>
    }
</div>

<div class="btn-wrapper clearfix">
    <div class="pull-right">
        <a href="#" class="btn-blue" onclick="adminView.subjects.edit(0)">Add Subject</a>

    </div>
</div>

