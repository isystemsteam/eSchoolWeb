@model HSchool.Business.Models.ClassSubjectViewModel
<h2>Classes & Subjects</h2>
<div class="form-group-expand-div admin-form">
    <div class="form-container">
        <div class="row custom-row clearfix">
            <div class="col-lg-6 custom-text">
                @Html.DropDownList("ddlClasses", Model.ListClasses, new { @id = "", @class = "selectpicker show-tick required", @onchange = "adminView.classSubject.selectEditClass(this)" })
                <i class="fa validationResult"></i>
            </div>
            <div class="col-lg-6 custom-text">
                @Html.DropDownList("ddlSections", Model.ListSections, new { @id = "", @class = "selectpicker show-tick required", @onchange = "adminView.classSubjects.selectSection(this)" })
                <i class="fa validationResult"></i>
            </div>
        </div>
    </div>
    <div class="form-container">
        <div class="" id="divEditClassSubject">

        </div>
    </div>
</div>
<script id="tempClassSectionSubject" type="text/x-jsrender">
    <table class="table table-striped table-hover">
        <thead class="thead-default">
            <tr>
                <th>Subjects</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            {{for Instance}}
            <tr class="clsClassSectionCollection">
                <td>{{:SubjectName}}</td>
                {{if IsSelected}}
                <td class="clsEmpty">
                    <div class="custom-check custom-check-margin">
                        <input type="checkbox" checked="checked" name="ClassSubject_{{:SubjectId}}" id="ClassSubject_{{:SubjectId}}" sectionid="{{:SubjectId}}" />
                        <label for="ClassSubject_{{:SubjectId}}"><span><span><i class="fa fa-check"></i></span></span></label>
                    </div>
                </td>
                {{else}}
                <td class="clsEmpty">
                    <div class="custom-check custom-check-margin">
                        <input type="checkbox" name="ClassSubject_{{:SubjectId}}" id="ClassSubject_{{:SubjectId}}" sectionid="{{:SubjectId}}" />
                        <label for="ClassSubject_{{:SubjectId}}"><span><span><i class="fa fa-check"></i></span></span></label>
                    </div>
                </td>
                {{/if}}
            </tr>
            {{/for}}
        </tbody>
    </table>
    <div class=" btn-wrapper clearfix" id="divSubmitContainer">
        <div class="pull-right">
            <input type="button" value="Cancel" class="btn-grey">
        </div>
        <div class="pull-right">
            <input type="button" value="Save" id="btnUpdateClassSectionSubject" class="btn-blue" />
        </div>
    </div>
</script>

