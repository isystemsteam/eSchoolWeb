@model HSchool.Business.Models.RolePrivilegeForm
<h2>Roles & Privilege</h2>
<div class="form-container clearfix">
    <div class="row custom-row clearfix">
        <div class="col-md-12 custom-text">
            @Html.DropDownList("ddlRoleId", Model.ListRoles, new { @class = "selectpicker show-tick required", @onchange = "adminView.rolesPrivileges.loadPrivilegesForRoles(this)" })
        </div>
    </div>
    <div id="divRolesPrivilegesContainer">
    </div>
</div>
<div class="pull-right">
    <input type="button" value="Save" id="btnRolePrivilege" onclick="adminView.rolesPrivileges.saveRolePrivileges()" class="btn-blue" />
</div>

<script id="tempRolesPrivilege" type="text/x-jsrender">
    <table class="table table-striped table-hover">
        <thead class="thead-default">
            <tr>
                <th>Roles</th>
                {{for Instance.Privileges}}
                <th>{{:PrivilegeName}}</th>
                {{/for}}
            </tr>
        </thead>
        <tbody>
            {{for Instance.Modules}}
            <tr class="trRolesActive">
                <td>
                    {{:ModuleName}} <!--<input type="hidden" class="hdnRoleId" value="{{:RoleId}}" />-->
                </td>
                {{for Privileges ~moduleId=ModuleId}}
                {{if IsChecked}}
                <td class="clsEmpty">
                    <div class="custom-check">
                        <div class="cstom-check-margin">
                            <input type="checkbox" checked="checked" name="{{:~moduleId}}myonoffswitch{{:PrivilegeId}}" id="{{:~moduleId}}myonoffswitch{{:PrivilegeId}}" />
                            <label for="{{:~moduleId}}myonoffswitch{{:PrivilegeId}}"><span><span><i class="fa fa-check"></i></span></span></label>
                        </div>
                    </div>
                    <!---->
                </td>
                {{else}}
                <td class="clsEmpty">
                    <div class="custom-check">
                        <div class="cstom-check-margin">
                            <input type="checkbox" name="{{:~moduleId}}myonoffswitch{{:PrivilegeId}}" id="{{:~moduleId}}myonoffswitch{{:PrivilegeId}}" />
                            <label for="{{:~moduleId}}myonoffswitch{{:PrivilegeId}}"><span><span><i class="fa fa-check"></i></span></span></label>
                        </div>
                    </div>
                </td>
                {{/if}}
                {{/for}}
            </tr>
            {{/for}}
        </tbody>
    </table>
</script>